---
import { twMerge } from 'tailwind-merge'

type Tag = 'div' | 'section' | 'article' | 'main' | 'header' | 'footer'

interface Props {
  tag?: Tag
  className?: string
  [key: string]: any
}

const { tag = 'div', className, ...props } = Astro.props
const Component = tag
---

<Component {...props} class={twMerge('max-w-6xl mx-auto px-6', className)}>
  <slot />
</Component>
